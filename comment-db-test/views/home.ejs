<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Test Comments Search</title>
  <link rel="stylesheet" href="">
</head>
<body>
  <h1>SEARCH A COUNTRY</h1>
  <form action="/comments" method="get">
    <input type="text" name="code" placeholder="Enter a country code" />
    <button type="submit">Search</button>
  </form>
  <h1>ADD A COMMENT</h1>
  <form action="/comments/add" method="get">
    <input type="text" name="code" placeholder="Country Code">
    <input type="text" name="username" placeholder="username" />
    <input type="text" name="comment" placeholder="Enter Comment" />
    <button type="submit">Add Comment</button>
  </form>

  <h1>DROP DOWN MENU</h1>
  <select name="code">
    <% comment.forEach(function(country){ %>
      <option value="<%= country.Code %>"><%= country.Name %></option>
    <% }) %>
  </select>
</body>
</html>
